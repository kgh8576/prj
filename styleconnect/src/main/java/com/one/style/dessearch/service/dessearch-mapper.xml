<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.one.style.descourse.service.descourse-mapper">
	
	<!-- 전체디자이너 리스트 -->
	<select id="selectDessearchList" resultType="com.one.style.dessearch.vo.DessearchVO">
	SELECT * FROM DESIGNER D  FULL OUTER JOIN REVIEW R ON(D.ID =R.ID)
	</select>
	
	<!-- 컷디자이너 리스트 -->
	<select id="cutList" resultType="com.one.style.dessearch.vo.DessearchVO">
	SELECT * FROM DESIGNER D  FULL OUTER JOIN REVIEW R ON(D.ID =R.ID)
	WHERE CUT_YN='Y'
	</select>
	
</mapper>