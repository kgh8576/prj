  			where b.rn between #{firstCnt} and #{lastCnt}
		

	</select>
	
	<select id="designerConHistoryListTotalCountSelect"
		parameterType="com.one.style.conhistory.vo.ConHistoryVO"
		resultType="Integer">
		select count(*) from consulting_history, des_course where consulting_history.cour_no = des_course.cour_no and id = #{desId}
	</select>
	

	
	



</mapper>